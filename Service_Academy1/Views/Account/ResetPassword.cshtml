@model ResetPasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - Service Academy</title>
    <link rel="stylesheet" href="~/css/AccountStyle/Account.css">
</head>
<body>
    <div id="overlay"></div>
    <div id="resetPassword">
        <h1 class="title">Reset Password</h1>

        <form asp-action="ResetPassword" method="post">
            <div class="container">
                <input asp-for="Email" type="email" placeholder="Email Address" readonly />

                <label asp-for="NewPassword"><b>New Password</b></label>
                <input asp-for="NewPassword" type="password" placeholder="New Password" />

                <label asp-for="ConfirmPassword"><b>Confirm Password</b></label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />

                <button type="submit" class="btn">Reset Password</button>
            </div>
        </form>
    </div>

    <script>
        function closeForm() {
            window.location.href = '@Url.Action("Home", "Home")';
        }
    </script>
</body>
</html>
