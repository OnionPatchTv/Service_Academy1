@model LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Service Academy</title> <!--NOTE-->
    <link rel="stylesheet" href="~/css/AccountStyle/Account.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div id="overlay"></div>
    <div id="forgotPassword">
        <span class="close-btn" onclick="closeForm()">&times;</span>
        <h1 class="title">Forgot Password</h1>

        <form asp-action="ForgotPass" method="post">
            <div class="container">
                <label asp-for="Email"><b>Email</b></label>
                <input asp-for="Email" type="text" placeholder="Enter Email Address" />

                <label asp-for="Password"><b>New Password</b></label>
                <div class="password-container">
                    <input asp-for="Password" type="password" placeholder="New Password" id="password" />
                    <span class="toggle-password" onclick="togglePasswordVisibility()">
                        <i id="eye-icon" class="fas fa-eye"></i>
                    </span>
                </div>
                <label asp-for="Password"><b>Confirm Password</b></label>
                <div class="password-container">
                    <input asp-for="Password" type="password" placeholder="Confirm Password" id="password" />
                    <span class="toggle-password" onclick="togglePasswordVisibility()">
                        <i id="eye-icon" class="fas fa-eye"></i>
                    </span>
                </div>

                <button type="submit" class="btn">Forgot Password</button>
            </div>
        </form>
    </div>
