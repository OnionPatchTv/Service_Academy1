@{
    ViewData["Title"] = "Verify Certificate";
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/HomeScript/VerifyScript.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/AccountStyle/Register.css">
}

<div id="overlay">
    <div class="container-two">
        <div class="form-container">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <p class="text-center">Please enter your Certificate ID (already hashed):</p>
            <form id="verifyForm">
                <input type="text" id="certificateId" name="certificateId" placeholder="Enter Certificate ID" required autofocus />
                <button type="submit" class="btn btn-primary">Verify Certificate</button>
            </form>
        </div>
    </div>
</div>

<!-- Modal for the verification result -->
<div id="verificationResultModal" style="display: none;">
    <div class="modal-content">
        <p id="verificationMessage"></p>
        <button onclick="closeModal()">Close</button>
    </div>
</div>

