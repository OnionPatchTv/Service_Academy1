@{
    ViewData["Title"] = "Verify Certificate";
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/HomeScript/VerifyScript.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/AccountStyle/Verify.css">
}

<div id="overlay">
    <div class="container-two">
        <div class="form-container">
            <h2 class="text-center">@ViewData["Title"]</h2>
            <p class="text-center">Please enter your Certificate ID</p>
            <form id="verifyForm">
                <input type="text" id="certificateId" name="certificateId" placeholder="Enter Certificate ID" required autofocus />
                <button type="submit" class="btn btn-primary">Verify Certificate</button>
            </form>
        </div>
    </div>
</div>

<!-- Modal for the verification result -->
<div id="verificationResultModal" class="modal fade" tabindex="-1" role="dialog">
    <!-- Added "fade" class for a smoother transition -->
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Verification Result</h5>
                <button type="button" class="close" id="closeModalButton" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="verificationMessage"></p>
            </div>
        </div>
    </div>
</div>

<!--Failed Modal-->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true" style="margin-top: 100px;" ">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="errorModalLabel">Login Failed</h5>
                <button type="button" class="close" id="closeModalButton" aria-label="Close">
            </div>
            <div class="modal-body">
                <img src="/Images/failed.png" alt="Login Failed" class="error-image">  <!-- Added image -->
                <p>Invalid email or password. Please try again!</p>
            </div>
        </div>
    </div>
</div>
<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog" id="success">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Success</h5>
                <button type="button" class="close" id="closeModalButton" aria-label="Close">
            </div>
            <div class="modal-body">
                <img src="/Images/success.png" alt="Success" class="sucsess-image">  <!-- Added image -->
                <p id="successModalMessage">Email sent successfully!</p>
            </div>       
        </div>
    </div>
</div>


