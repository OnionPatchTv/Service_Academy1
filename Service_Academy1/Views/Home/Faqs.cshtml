@{
    ViewData["Title"] = "Frequently Asked Questions Page";
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/HomeScript/FaqsScript.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/HomeStyle/FaqsStyle.css">
}

<div class="container">
    <div class="content">
        <section class="layout">
            <h1>Frequently Asked Questions</h1>
            <p>Here are some common questions and answers about our Service Academy.</p>

            <div class="faq-container">
                <div class="faq-item">
                    <button class="faq-question">What is the Service Academy?</button>
                    <div class="faq-answer">
                        <p>The Service Academy is a part of Batangas State University dedicated to providing extension services to the community, focusing on innovation and technology transfer.</p>
                    </div>
                </div>
                <div class="faq-item">
                    <button class="faq-question">How can I enroll in the programs?</button>
                    <div class="faq-answer">
                        <p>Enrollment is done online through our official website. You can also visit our campus for assistance.</p>
                    </div>
                </div>
                <div class="faq-item">
                    <button class="faq-question">What are the benefits of joining the Service Academy?</button>
                    <div class="faq-answer">
                        <p>Joining the Service Academy provides you with hands-on experience, skill development, and networking opportunities with industry experts.</p>
                    </div>
                </div>
                <div class="faq-item">
                    <button class="faq-question">Don't know how to navigate through the System?</button>
                    <div class="faq-answer">
                        <p>Service Academy faqs is here to help. By clicking <a href="https://drive.google.com/file/d/1-p2B8_pmX_sd3W5m6gUUecXvyLI9UcrW/view?usp=drive_link" class="verify-certificate-link" style="display: inline;">this link, it will redirect you to a google drive containing the user manual that covers on what and how to use each key features of Service Academy</p>
                    </div>
                </div>
                <div class="faq-item">
                    <button class="faq-question">How to verify my certificate?</button>
                    <div class="faq-answer">
                        <p>
                            To verify your certificate, please enter the certificate ID on the verification page then click <a href="@(Url.Action("VerifyCertificate", "Home"))" class="verify-certificate-link" style="display: inline;">
                                Verify Certificate
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>