@model MyLearningStreamViewModel
@using Service_Academy1.Utilities

@{
    ViewData["Title"] = "Program Stream Page";
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/TraineeScript/MyLearningScript.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/ProjectLeaderStyle/ProgramStreamStyle.css">
}

<nav class="navbar">
    <a href="@Url.Action("MyLearning", "Trainee")" class="@(Html.IsActive("MyLearning", "Trainee") ? "active" : "")">Dashboard</a>
    <a href="javascript:void(0);" class="@(Html.IsActive("MyLearningStream", "Trainee") ? "active" : "")" onclick="location.reload();">Stream</a>
</nav>

<!-- Full Width Class Banner Section -->
<section class="class-banner">
    <div class="banner-content">
        <div class="banner-image">
            <img src="@Url.Content(@Model.PhotoPath)" alt="@Model.Title">
        </div>
        <div class="banner-text">
            <h2 class="class-title">@Model.Title</h2>
            <p class="description">@Model.Description</p>
            <div class="trainees">
                <i class="fa-solid fa-graduation-cap"></i> 45 Trainees
            </div>
        </div>
    </div>
</section>

<!-- Main Content Section -->
<main class="main-content">
    <section class="content-sections">
        <aside class="modules">
            <h3>Modules</h3>
            <div class="module-list">
                @if (Model.Modules != null)
                {
                    @foreach (var module in Model.Modules.OrderBy(m => m.Title))
                    {
                        <button class="module-title" onclick="loadModuleContent('@module.FilePath')">Module @module.Title</button>
                    }
                }

                <h3>Quizzes</h3>
                @if (Model.Quizzes != null)
                {
                    @foreach (var quiz in Model.Quizzes)
                    {
                        <button class="quiz-title" onclick="location.href='@Url.Action("RedirectToQuizOrResult", "Trainee", new { quizId = quiz.QuizId })'">
                            @quiz.QuizTitle
                        </button>
                    }
                }
            </div>
        </aside>

        <section class="module-viewer">
            <h3>Module Viewer</h3>
            <div class="viewer-content">
                <iframe id="moduleContentFrame" class="viewer-content" style="width: 100%; height: 600px;" src=""></iframe>
            </div>
        </section>
    </section>

    @if (Model.Enrollment != null)
    {
        <!-- Enrollment and Evaluation Section -->
        @foreach (var enrollment in Model.Enrollment)
        {
            @if (enrollment.ProgramId == Model.ProgramId) // Removed the program completion check for testing
            {
                bool hasEvaluated = Model.Evaluations.Any(e => e.ProgramId == enrollment.ProgramId && e.LearnerId == Model.UserId);

                @if (!hasEvaluated)
                {
                    <a asp-controller="Evaluation" asp-action="Create" asp-route-programId="@enrollment.ProgramId" class="btn btn-primary">Evaluate Program</a>
                }
                else
                {
                    <span>You have already submitted an evaluation for this program.</span>
                }
            }
        }
    }
    else
    {
        <p>No enrollments found.</p>
    }
</main>

