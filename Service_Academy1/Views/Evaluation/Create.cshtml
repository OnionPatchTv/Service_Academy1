@model EvaluationFormViewModel

<h2>Evaluation Form for @ViewBag.ProgramTitle</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (Model.Questions != null && Model.Questions.Any())
{
    <form asp-action="Submit" method="post" onsubmit="showConfirmation(event)">
        @foreach (var categoryGroup in Model.Questions.GroupBy(q => q.Category))
        {
            <div class="container">
                <!-- Display the category title -->
                <div class="category">@categoryGroup.Key</div>
                <table>
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>1</th>
                            <th>2</th>
                            <th>3</th>
                            <th>4</th>
                            <th>5</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in categoryGroup)
                        {
                            <tr>
                                <!-- Display category if QuestionText is missing, otherwise display the question -->
                                <td class="question">@(!string.IsNullOrWhiteSpace(question.QuestionText) ? question.QuestionText : $"[{categoryGroup.Key}]")</td>
                                @for (int rating = 1; rating <= 5; rating++)
                                {
                                    <td>
                                        <input type="radio"
                                               name="Responses[@(Model.Questions.IndexOf(question))].Rating"
                                               value="@rating"
                                               id="q@(question.QuestionId)_@rating"
                                               required />
                                        <label for="q@(question.QuestionId)_@rating">@rating</label>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        <input type="hidden" asp-for="ProgramId" />
        <button type="submit">Submit Evaluation</button>
    </form>
}
else
{
    <p>No questions available for this evaluation.</p>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function showConfirmation(event) {
        event.preventDefault(); // Prevent default form submission

        if (confirm("Are you sure you want to submit your evaluation?")) {
            // Serialize the form data
            var formData = $('form').serialize();

            // Use AJAX to submit the form data
            $.ajax({
                type: "POST",
                url: '@Url.Action("Submit", "Evaluation")', // Adjust action and controller if necessary
                data: formData,
                success: function (response) {
                    alert("Evaluation submitted successfully!");
                    // Redirect to the MyLearningStream page with the ProgramId
                    window.location.href = '@Url.Action("MyLearningStream", "Trainee", new { programId = Model.ProgramId })';
                },
                error: function (error) {
                    alert("An error occurred while submitting the evaluation.");
                    console.error(error);
                }
            });
        }
    }
</script>

<style>
    /* CSS styles for form layout */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8c3a3;
    }

    .container {
        background-color: white;
        padding: 20px;
        margin: 20px auto;
        width: 80%;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .category {
        font-weight: bold;
        margin-bottom: 10px;
        font-size: 18px;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

    th, td {
        padding: 10px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    th {
        font-size: 14px;
        color: #666;
        background-color: #f0f0f0;
    }

    td {
        background-color: #f2f2f2;
    }

    .question {
        text-align: left;
        font-weight: bold;
        background-color: white;
    }

    input[type="radio"] {
        transform: scale(1.3);
        margin: 0 5px;
    }

    label {
        margin-right: 5px;
        font-size: 0;
    }

    button[type="submit"] {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 15px;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>
