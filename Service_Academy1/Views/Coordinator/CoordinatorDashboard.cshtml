    </div>

    <!-- Bottom Charts Section -->
    <div class="bottom-charts">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <h3>Completion Rate</h3>
                    <div class="chart-container">
                        <canvas id="completionRateChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <h3>Trainee's Progress</h3>
                    <div class="chart-container">
                        <canvas id="progressChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.3.0/dist/chart.umd.min.js"></script>
<script>
    // Engagement Chart
    const engagementData = {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
        datasets: [{
            label: 'Engagement',
            data: [12, 19, 3, 5, 2, 3, 7],
            borderColor: '#FF6600',
            backgroundColor: 'rgba(255, 102, 0, 0.2)',
            borderWidth: 1
        }]
    };

    const engagementConfig = {
        type: 'line',
        data: engagementData,
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function (context) {
                            return context.dataset.label + ': ' + context.raw;
                        }
                    }
                }
            },
            scales: {
                x: {
                    beginAtZero: true,
                },
                y: {
                    beginAtZero: true
                }
            }
        }
    };

    const engagementChart = new Chart(
        document.getElementById('engagementChart'),
        engagementConfig
    );

    // Completion Rate Chart
    const completionRateData = {
        labels: ['Completed', 'Not Completed'],
        datasets: [{
            data: [80, 20],
            backgroundColor: ['#FF6600', 'rgba(255, 102, 0, 0.2)'],
            borderColor: ['#FF6600', '#e0e0e0'],
            borderWidth: 1
        }]
    };

    const completionRateConfig = {
        type: 'doughnut',
        data: completionRateData,
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function (context) {
                            return context.dataset.label + ': ' + context.raw;
                        }
                    }
                }
            }
        }
    };

    const completionRateChart = new Chart(
        document.getElementById('completionRateChart'),
        completionRateConfig
    );

    // Trainee's Progress Chart
    const progressData = {
        labels: ['Progress', 'Remaining'],
        datasets: [{
            data: [60, 40],
            backgroundColor: ['#FF6600', 'rgba(255, 102, 0, 0.2)'],
            borderColor: ['#FF6600', '#e0e0e0'],
            borderWidth: 1
        }]
    };

    const progressConfig = {
        type: 'doughnut',
        data: progressData,
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function (context) {
                            return context.dataset.label + ': ' + context.raw;
                        }
                    }
                }
            }
        }
    };

    const progressChart = new Chart(
        document.getElementById('progressChart'),
        progressConfig
    );
</script>
