@model Service_Academy1.Models.PostModel
@{
    ViewBag.Title = "Create Post";
}

<h2>Create Post</h2>

<form asp-action="CreatePost" asp-controller="Discussion" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="ProgramId" value="@ViewBag.ProgramId" />
    <div class="form-group">
        <label for="Title">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Content">Content</label>
        <textarea asp-for="Content" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
